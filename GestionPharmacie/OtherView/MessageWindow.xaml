<Window x:Class="GestionPharmacie.OtherView.MessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:MyControls="clr-namespace:MyControlLibrary;assembly=MyControlLibrary"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GestionPharmacie.OtherView"
        mc:Ignorable="d"
        Title="Activation" Height="150" Width="386">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Margin="5" BorderThickness="2,0,0,0" BorderBrush="Gray" FontWeight="Bold" FontSize="14" Content=" Key :" />
        <TextBox x:Name="txtKey" Margin="5" Grid.Row="1" Height="22"></TextBox >
        <StackPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <MyControls:Button Text="Activer" x:Name="BtnActiver" MouseDown="BtnActiver_MouseDown"/>
        </StackPanel>
    </Grid>
</Window>
